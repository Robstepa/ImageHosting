{% extends 'index.jinja2' %}

{% block content %}
    <div class="container">
      <div class="row text-center text-lg-left">
    {% for photo in photos %}
        {% if photo.image %}
            <div class="col-lg-3 col-md-4 col-xs-6">
                <a href="#" class="d-block mb-4 h-100">
                    <img class="img-fluid img-thumbnail" src="{{ photo.image.url }}" alt="">
                </a>
            </div>
            <form method="POST">
                {% csrf_token %}
                <input type="hidden" value="{{ photo.image.path }}" name="photo">
                <input type="submit" value="Delete">
            </form>
        {% endif %}
    {% endfor %}
      </div>

    </div>
{% endblock %}